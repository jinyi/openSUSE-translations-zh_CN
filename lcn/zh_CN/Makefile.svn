#
# Makefile.svn for lcn_@@LL@@
#
etcdir = ../50-etc
LL = $(shell pwd | sed 's:.*/::')

configure: all
	./configure

all:
	for f in top-Makefile.am top-configure.ac top-README; do \
	  sed "s:@@LL@@:$(LL):;s:@NOEDIT@:\
Do not edit this file.  Edit $(etcdir)/$$f instead.:" $(etcdir)/$$f \
	  >$${f#top-}; \
	done
	mkdir -p po && cp $(etcdir)/po-Makefile.am po/Makefile.am
	autoreconf --force --install
	cd .. && autoreconf --force --install

install: configure
	make
	make install

reconf: all
	./config.status --recheck
	./config.status
